<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/coursesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List of Yoga Courses"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <ListView
        android:id="@+id/coursesListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="8dp"/>

    <Button
        android:id="@+id/deleteCourseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Selected Course" />

    <Button
        android:id="@+id/editCourseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Selected Course" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back" />
</LinearLayout>
